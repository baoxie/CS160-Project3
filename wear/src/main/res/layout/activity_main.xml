<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    tools:deviceIds="wear_round"
    android:background="@color/gray">

    <ViewFlipper
        android:id="@+id/mainmenuflipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/main_menu_view1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="@color/text_color"
            android:paddingLeft="68dp"
            android:paddingTop="45dp"
            android:textSize="30sp"
            android:background="@drawable/main_menu1"
            android:text="@string/main_menu1" />

        <TextView android:id="@+id/main_menu_view2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="@color/text_color"
            android:paddingLeft="60dp"
            android:paddingTop="45dp"
            android:textSize="30sp"
            android:background="@drawable/main_menu2"
            android:text="@string/main_menu2" />

        <TextView android:id="@+id/main_menu_view3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="@color/text_color"
            android:paddingLeft="60dp"
            android:paddingTop="45dp"
            android:textSize="30sp"
            android:background="@drawable/main_menu3"
            android:text="@string/main_menu3" />

    </ViewFlipper>

    <Button
        android:id="@+id/prev_button"
        android:layout_width="30dp"
        android:layout_height="46dp"
        android:background="@drawable/prev"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/next_button"
        android:layout_marginEnd="160dp" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="30dp"
        android:layout_height="46dp"
        android:background="@drawable/next"
        android:layout_marginStart="170dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>

